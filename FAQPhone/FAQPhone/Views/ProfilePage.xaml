<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infr="clr-namespace:FAQPhone.Inferstructure;assembly=FAQPhone"
             x:Class="FAQPhone.Views.ProfilePage"
             Title="ProfilePage">
    <ScrollView>
        <StackLayout Style="{StaticResource pageStyle}">
            <Entry x:Name="firstnameEntry" Placeholder="{infr:Translate firstname}" Text="{Binding firstname, Mode=TwoWay}" />
            <Entry x:Name="lastnameEntry" Placeholder="{infr:Translate lastname}" Text="{Binding lastname, Mode=TwoWay}" />
            <Button Text="{infr:Translate signup}" Command="{Binding SignupCommand}" StyleClass="Info" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ScrollView>
</ContentPage>