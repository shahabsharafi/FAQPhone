<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FAQPhone.Views.ProfilePage"
             Title="ProfilePage">
    <ScrollView>
        <StackLayout Style="{StaticResource pageStyle}">
            <Entry x:Name="firstnameEntry" Placeholder="{infr:Translate username}" Text="{Binding username, Mode=TwoWay}" />
            <Entry x:Name="lastnameEntry" Placeholder="{infr:Translate password}" IsPassword="true" Text="{Binding password, Mode=TwoWay}" />
            <Entry x:Name="confirmEntry" Placeholder="{infr:Translate confirm}" IsPassword="true" Text="{Binding confirm, Mode=TwoWay}" />
            <Entry x:Name="emailEntry" Placeholder="{infr:Translate email}" Text="{Binding email, Mode=TwoWay}" />
            <Button Text="{infr:Translate signup}" Command="{Binding SignupCommand}" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ScrollView>
</ContentPage>