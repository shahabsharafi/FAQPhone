<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:infr="clr-namespace:FAQPhone.Infarstructure;assembly=FAQPhone"
             x:Class="FAQPhone.Views.DiscountNewPage"
             Title="{infr:Translate discount_new}">
  <ScrollView>
        <StackLayout Style="{StaticResource pageStyle}">
            <Entry Placeholder="{infr:Translate discount_price}" Text="{Binding price, Mode=TwoWay}" />
            <Entry Placeholder="{infr:Translate discount_count}" Text="{Binding count, Mode=TwoWay}" />
            <Label Text="{Binding total}" />
            <Button Text="{infr:Translate discount_category_selection}" Command="{Binding SelectCommand}" StyleClass="Info" />
            <Button Text="{infr:Translate command_add}" Command="{Binding AddCommand}" StyleClass="Info" />
        </StackLayout>
    </ScrollView>
</ContentPage>