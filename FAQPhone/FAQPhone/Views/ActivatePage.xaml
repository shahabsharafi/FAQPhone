<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infr="clr-namespace:FAQPhone.Inferstructure;assembly=FAQPhone"
             x:Class="FAQPhone.Views.ActivatePage"
             Title="ActivatePage">
    <ScrollView>
        <StackLayout Style="{StaticResource pageStyle}">
            <Entry x:Name="usernameEntry" Placeholder="{infr:Translate username}" Text="{Binding username, Mode=TwoWay}" />
            <Entry x:Name="activationEntry" Placeholder="{infr:Translate activation}" IsPassword="true" Text="{Binding activation, Mode=TwoWay}" />
            <Button Text="{infr:Translate activate}" Command="{Binding ActivateCommand}" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ScrollView>
</ContentPage>