<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infr="clr-namespace:FAQPhone.Inferstructure;assembly=FAQPhone"
             xmlns:local="clr-namespace:CustomRenderer;assembly=FAQPhone"
             x:Class="FAQPhone.Views.ChatPage"
             Title="{infr:Translate chat}">
    <ScrollView>
        <StackLayout>
            <StackLayout>
                <Editor  x:Name="text" Text="{Binding replay, Mode=TwoWay}" FontSize="Small" BackgroundColor="#efefef" HeightRequest="80" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="{infr:Translate command_send}" Command="{Binding SendCommand}" StyleClass="Info" />
                    <Button Text="{infr:Translate command_finish}" Command="{Binding FinishCommand}" StyleClass="Info" Grid.Row="1" Grid.Column="1" />
                </StackLayout>
            </StackLayout>
            <ListView ItemsSource="{ Binding List }">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:MessageViewCell Body="{Binding text}"  Owner="{Binding owner.username}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>