<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infr="clr-namespace:FAQPhone.Inferstructure;assembly=FAQPhone"
             x:Class="FAQPhone.Views.DepartmentPage"
             Title="{infr:Translate select-department}">
    <ScrollView>
        <StackLayout Style="{StaticResource pageStyle}">
            <ListView ItemsSource="{ Binding list }">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding caption}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>