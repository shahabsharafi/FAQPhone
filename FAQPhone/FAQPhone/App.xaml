<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:light="clr-namespace:Xamarin.Forms.Themes;assembly=Xamarin.Forms.Theme.Light"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FAQPhone.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary MergedWith="light:LightThemeResources">
            <Style TargetType="Entry">
                <Setter Property="HorizontalTextAlignment" Value="{Binding Direction}" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#4e5758" />
                <Setter Property="HorizontalTextAlignment" Value="{Binding Direction}" />
            </Style>
            <Style x:Key="pageStyle" TargetType="StackLayout">
                <Setter Property="VerticalOptions" Value="StartAndExpand" />
                <Setter Property="Padding" Value="5,20,5,5" />
            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>